@page "/YourBooks"
@inject Data.DB db
@inject Data.User user
@inject Data.ReadBook book
@inject NavigationManager NavigationManager

<PageTitle>YourBooks</PageTitle>

<h3>Your Books</h3>


@if (list.Count == 0)
{
    <h1>No Books</h1>
}
else
{
    @foreach (var data in list)
    {
        <div class="grid">
            <div class="book">
                <div class="title"><b>@data?.Title</b></div>
                <img src="/images/jpg/@data?.JPG" alt="@data?.Title" />
                <button @onclick="@(() => ButtonClicked(data.PDF))">
                    <h3>Read</h3>

                </button>

                <button @onclick="@(() => ReturnButtonClicked(data.bid))">
                    <h3>Return</h3>

                </button>

            </div>
        </div>
    }
}



<style>
    body {
        background-color: #F5DAB3;
    }

    .book {
        display: grid;
        grid-template-columns: auto;
        grid-template-rows: auto;
    }

    img {
        height: 100%;
        width: 100%;
    }

    .grid {
        height: 25%;
        width: 25%;
        display: flex;
        margin: 30px;
    }

    .title {
        font-size: 30px;
    }

</style>


